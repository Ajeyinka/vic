---
layout: 'base.njk'
---
       

<section>
    <div class="container_large">
        <div class="padding_global">
          <article class="main-article">
             <div class="container--narrow">
                
                <h5 class="category"> {{ category }}</h5>
                  <h1 class="article-title">
                      {{ title }}
                  </h1>
                  
              <figure class="main-article__figure">
                 <img src="{{ image }}" alt="{{ imageAlt }}">
                 <figcaption>
                   
                 </figcaption>
              </figure>
 
             {{content | safe }}
 
 
 
            </div>
         </article>
        </div>
    </div>
 </section>
 
 <section>
    <div class="container_large">
        <div class="padding_global">
            <div class="section-title mid">
                <h2><span class="text-span">More</span> Articles</h2>
                <p>
                    Explore research studies, industry insights, and guides designed to make content marketing a growth driver for your startup.
               </p>
                
            </div>
            <div>
              <ul role="list" class="articles__list flow">
                  {%- for post in collections.featured | reverse -%}
                     {% include 'article-snippet.njk' %}
                  {%- endfor -%}
              </ul>
            </div>
            
            <div class="button-holder">
                <a href="/blog" class="button">View All</a>
            </div>
        </div>
    </div>
  </section>
 
         
               